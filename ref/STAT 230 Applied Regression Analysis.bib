	booktitle = {2022 {IEEE} 46th {Annual} {Computers}, {Software}, and {Applications} {Conference} ({COMPSAC})},
	author = {Colley, Laura and Dybka, Andrew and Gauthier, Adam and Laboissonniere, Jacob and Mougeot, Alexandre and Mowla, Nayeeb and Dick, Kevin and Khalil, Hoda and Wainer, Gabriel},
	month = jun,
