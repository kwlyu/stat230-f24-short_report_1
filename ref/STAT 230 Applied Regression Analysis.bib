@article{howlin_patients_2021,
	title = {Patients choose music with high energy, danceability, and lyrics in analgesic music listening interventions},
	volume = {49},
	issn = {0305-7356},
	url = {https://doi.org/10.1177/0305735620907155},
	doi = {10.1177/0305735620907155},
	abstract = {Self-selected music is the best predictor of a successful outcome in music interventions, but the reasons behind this are unclear. One suggestion is that patients choose different types of music compared to experimenters. To explore this suggestion, the current study identified specific pieces of music that were used in previous studies for pain management using a scoping review, and analyzed each track in terms of the Spotify audio features of energy, danceability, instrumentalness, valence, and tempo. Music was categorized depending on whether it was chosen by the patient from an unlimited choice (PUC), a limited choice (LC), or chosen by the experimenter (EC), so that comparisons could be made between groups. One-way analyses of variance (ANOVAs) identified that PUC music was significantly higher in energy and danceability, and lower in instrumentalness, compared to LC or EC music. A logit ordinal regression demonstrated that as people are given more freedom to choose music to reduce their pain, they increasingly choose music that is higher in energy and danceability, and more likely to contain lyrics. This study also demonstrates the impact of allowing patients to choose music from an unlimited range compared to choosing from a limited range of music.},
	language = {en},
	number = {4},
	urldate = {2024-10-15},
	journal = {Psychology of Music},
	author = {Howlin, Claire and Rooney, Brendan},
	month = jul,
	year = {2021},
	note = {Publisher: SAGE Publications Ltd},
	pages = {931--944},
	file = {SAGE PDF Full Text:/Users/kwlyu/Zotero/storage/SQWBHPJE/Howlin and Rooney - 2021 - Patients choose music with high energy, danceability, and lyrics in analgesic music listening interv.pdf:application/pdf},
}

